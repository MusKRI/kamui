      "content": "import {\r\n  Dialog,\r\n  DialogContent,\r\n  DialogDescription,\r\n  DialogFooter,\r\n  DialogHeader,\r\n  DialogTitle,\r\n  DialogTrigger,\r\n} from \"@/registry/pure-ui/components/shadcn/ui/dialog\";\r\n\r\nimport { Button } from \"@/registry/pure-ui/components/shadcn/ui/button\";\r\n\r\nexport const DialogSlidesDemo = () => {\r\n  const slides = [\r\n    \"top-slide\",\r\n    \"bottom-slide\",\r\n    \"left-slide\",\r\n    \"right-slide\",\r\n  ] as const;\r\n\r\n  return (\r\n    <div className=\"flex flex-col md:flex-row items-center gap-4\">\r\n      {slides.map((slide) => {\r\n        return (\r\n          <Dialog key={slide}>\r\n            <DialogTrigger asChild>\r\n              <Button>{slide}</Button>\r\n            </DialogTrigger>\r\n            <DialogContent animationPreset={slide}>\r\n              <DialogHeader>\r\n                <DialogTitle>Terms of Service</DialogTitle>\r\n                <DialogDescription>\r\n                  Please read the following terms of service carefully.\r\n                </DialogDescription>\r\n              </DialogHeader>\r\n\r\n              <div className=\"grid gap-4 py-4\">\r\n                <p>\r\n                  Lorem ipsum dolor sit amet consectetur adipisicing elit.\r\n                  Quisquam, quos. Lorem ipsum dolor sit amet consectetur\r\n                  adipisicing elit. Quisquam, quos.\r\n                </p>\r\n              </div>\r\n\r\n              <DialogFooter>\r\n                <Button\r\n                  variant=\"outline\"\r\n                  radius=\"full\"\r\n                  className=\"w-full sm:w-auto\"\r\n                >\r\n                  Decline\r\n                </Button>\r\n                <Button\r\n                  type=\"submit\"\r\n                  radius=\"full\"\r\n                  className=\"w-full sm:w-auto\"\r\n                >\r\n                  Accept\r\n                </Button>\r\n              </DialogFooter>\r\n            </DialogContent>\r\n          </Dialog>\r\n        );\r\n      })}\r\n    </div>\r\n  );\r\n};\r\n",
      "type": "registry:component"
    }
  ]
}